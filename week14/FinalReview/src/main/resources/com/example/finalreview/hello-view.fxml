<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalreview.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Default code from JavaFX IntelliJ:   -->
    <Label fx:id="greeting"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>

    <!-- Below is our custom code:   -->
    <Label text="Enter your value in lb:" />
    <!-- Adding TextField: with id value to be referenced in the controller -->
    <!-- let's name it "userValue"  -->

    <TextField fx:id="userValue" ></TextField>

    <!-- using two tags:  -->
    <Label fx:id="result"></Label>
    <Button text="Convert" onAction="#onConvertButtonClick" />

</VBox>
